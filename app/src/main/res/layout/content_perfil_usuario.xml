<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/pantallaCompleta"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abraham.lookuppet.Views.PerfilUsuario"
    tools:showIn="@layout/activity_perfil_usuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:id="@+id/FotoDescripcionOpciones"
        android:background="#cdcccc">

        <ImageView
            android:layout_width="0dp"
            android:layout_margin="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:id="@+id/FotoPerfil"
            android:background="#f9f9f9"
            android:src="@drawable/no_avatar"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/DescripcionOpciones"
            android:background="#f9f9f9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/descr"
                android:text="Esta es mi descripcion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/Opciones"
                android:orientation="horizontal"
                android:background="#5fd996">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/botonMisAdopciones"
                    android:background="#5fd996"
                    android:src="@drawable/ic_chrome_reader_mode_black_24dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/botonMisPerdidas"
                    android:background="#5fd996"
                    android:src="@drawable/ic_action_toggle_star" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/botonMisSeguimientos"
                    android:background="#5fd996"
                    android:src="@drawable/ic_action_toggle_check_box" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/botonMisMascotas"
                    android:background="#5fd996"
                    android:src="@drawable/ic_action_social_group" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:id="@+id/listaCosas"
        >

    </LinearLayout>

</LinearLayout>
