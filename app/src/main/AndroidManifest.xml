<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abraham.lookuppet">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.InicioSesion"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_inicio_sesion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.Registro"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_registro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.Home"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Utilities.BaseNaviD"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_base_navi_d"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.PublicacionPerdida"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_publicacion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.VerPublicacionPerdida"
            android:label="@string/title_activity_ver_publicacion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.PublicacionAdopcion"
            android:label="@string/title_activity_publicacion_adopcion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.VerPublicacionAdopcion"
            android:label="@string/title_activity_ver_publicacion_adopcion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.PerfilUsuario"
            android:label="@string/title_activity_perfil_usuario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.EditarPerfil"
            android:label="@string/title_activity_editar_perfil"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
